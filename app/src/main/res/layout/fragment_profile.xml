<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragments.Profile"
    >
    <TextView
        android:id="@+id/tvEditProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_overview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:textStyle="bold"/>
    <!-- circle image view to show the image -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivProfile"
        app:civ_border_width= "3dp"
        app:civ_border_color= "@color/black"
        android:src= "@drawable/ic_avatar_default"
        android:layout_centerInParent= "true"
        android:layout_width= "140dp"
        android:layout_height= "140dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvEditProfile"/>

      <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Email"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/ivProfile"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/tvUserNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvEmail"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:text="@string/user_name"
        android:textSize="20sp"
        android:labelFor="@id/edUserName"
        />
    <EditText
        android:id="@+id/edUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="12"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@id/tvUserNameLabel"
        app:layout_constraintBaseline_toBaselineOf="@id/tvUserNameLabel"
        android:layout_marginTop="30sp"/>
    <TextView
        android:id="@+id/tvAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvUserNameLabel"
        app:layout_constraintRight_toRightOf="@id/tvUserNameLabel"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:text="@string/age"
        android:textSize="20sp"
        android:labelFor="@id/edUserName"
        />
    <EditText
        android:id="@+id/edAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="2"
        android:inputType="number"
        android:layout_marginTop="30sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tvAge"
        app:layout_constraintStart_toStartOf="@id/edUserName"
        />
    <TextView
        android:id="@+id/tvLanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Language:"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@id/tvUserNameLabel"
        app:layout_constraintTop_toBottomOf="@id/edAge"
        />
    <Spinner
        android:id="@+id/spLanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:layout_constraintBaseline_toBaselineOf="@id/tvLanguage"
        app:layout_constraintTop_toTopOf="@id/tvLanguage"
        app:layout_constraintStart_toEndOf="@id/tvLanguage"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/tvCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/country"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@id/tvUserNameLabel"
        app:layout_constraintTop_toBottomOf="@id/tvLanguage"
        />
    <EditText
        android:id="@+id/edCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@id/edUserName"
        android:layout_marginTop="30dp"
app:layout_constraintBaseline_toBaselineOf="@id/tvCountry"
        />

    <androidx.appcompat.widget.AppCompatToggleButton
        android:id="@+id/btnToggleEditSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="40dp"
        android:textOn="Save"
        android:textOff="Edit"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textColor="#f00"/>

</androidx.constraintlayout.widget.ConstraintLayout>
